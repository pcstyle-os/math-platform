    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "convex": "^1.31.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.26.2",
    "katex": "^0.16.27",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "openssl": "^2.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-dropzone": "^14.3.8",
